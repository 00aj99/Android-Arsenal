<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>

    <style name="AppTheme.DetailInfo">
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowSharedElementEnterTransition">@transition/detail_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/detail_shared_return</item>
    </style>

    <style name="AppTheme.TransparentStatusBar">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">#fff</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:actionMenuTextColor">@color/colorAccent</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Text.ListName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left|center_horizontal</item>
        <item name="android:textColor">@color/text_tertiary_dark</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.ListTag">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_small</item>

    </style>

    <style name="Text.calendar">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Text.ListContent">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:maxLines">15</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="Text.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_bigger</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="Text.Content">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="Text.Content.Hint">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>

    <style name="AppTheme.AppCompat.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text_Tag">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
</resources>
